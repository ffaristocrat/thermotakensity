{
  "name": "Thermotakensity",
  "version": "1.0.1",
  "description": "Measure the thermodynamic intensity of opinions on Twitter using the Ingraham scale",
  "manifest_version": 2,

  "content_scripts": [{
    "js": [
      "jquery-3.3.1.min.js",
      "content.js"
    ],
    "css": [
    ],
    "matches": ["*://*.twitter.com/*", "*://twitter.com/*"]
  }],
  "permissions": ["activeTab"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon128.png"
  }
}
